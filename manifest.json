{
    "name": "Clean Closet",
    "description": "Extension that checks fashion sites against the Fashion Transparency Index database.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "thumbnail.png"
    },
    "content_scripts": [
        {
            "js": ["content.js", "parser.js"],
            "matches": [
                "https://developer.chrome.com/docs/extensions/*",
                "https://developer.chrome.com/docs/webstore/*",
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'unsafe-inline' https://cdn.jsdelivr.net"
  }
}
